{
  "name": "@triviumsoftware/chemist",
  "type": "module",
  "version": "2.0.5",
  "description": "Chemist is a packager that bundles source code within a standard Node.js project into a compressed file.",
  "author": "Tramaine L. Gillus",
  "repository": {
    "type": "git",
    "url": "git@github.com:tgillus/chemist.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "bin": {
    "chemist": "./lib/cli/cli.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "/lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "build",
    "build-tool",
    "bundler",
    "compression",
    "package",
    "packager",
    "packaging",
    "zip"
  ],
  "scripts": {
    "barrels": "barrelsby -c barrelsby.json && npm run format && replace-in-files --regex=$'(export * from \\'.+)?\\';\\n' --replacement=$'$1.js\\';\\n' ./src/index.ts",
    "build": "npm run clean && npm run barrels && npm test && tsc",
    "build:ci": "npm run clean && npm test && tsc",
    "clean": "del-cli lib coverage",
    "format": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepack": "npm run build",
    "prepare": "husky",
    "release": "release-it --ci",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "watch": "tsc -c"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint/js": "9.37.0",
    "@release-it/conventional-changelog": "10.0.1",
    "@types/archiver": "6.0.3",
    "@types/node": "22.18.8",
    "@vitest/coverage-v8": "3.2.4",
    "barrelsby": "2.8.1",
    "del-cli": "7.0.0",
    "eslint": "9.37.0",
    "globals": "16.4.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "release-it": "19.0.5",
    "replace-in-files-cli": "4.0.0",
    "testdouble": "3.20.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@sindresorhus/is": "7.1.0",
    "archiver": "7.0.1",
    "boxen": "8.0.1",
    "chalk": "5.6.2",
    "commander": "14.0.1",
    "cosmiconfig": "9.0.0",
    "del": "8.0.1",
    "execa": "9.6.0",
    "listr2": "9.0.4",
    "make-dir": "5.1.0",
    "package-directory": "8.1.0",
    "read-package-up": "11.0.0"
  }
}
